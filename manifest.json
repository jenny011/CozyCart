{
    "manifest_version": 2,
    "name": "CozyCart",
    "description": "Select an ingredent and click to get a list of online purchase recommendations.",
    "version": "1.0",
    "homepage_url": "https://github.com/jenny011/Recipe-Extension",
    "permissions": [
        "activeTab"
    ],
    "icons": {
        "48": "icons/logo_48.png",
        "128": "icons/logo128.png"
    },
    "background": {
        "scripts": ["content.js"],
        "persistent": false
    },
    "browser_action": {},
    "content_scripts": [{
        "matches": ["https://*/*"],
        "js": ["content.js"]
    }],
    "web_accessible_resources": ["images/bg.png"]
}
