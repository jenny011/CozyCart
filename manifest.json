{
    "manifest_version": 2,
    "name": "selection-to-clipboard",
    "description": "Example of WebExtensionAPI for writing to the clipboard",
    "version": "1.0",
    "homepage_url": "https://github.com/jenny011/Recipe-Extension",

    "icons": {
        "48": "icons/logo_48.png"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_title": "List purchase links",
        "default_popup": "popup.html"
    }
}
