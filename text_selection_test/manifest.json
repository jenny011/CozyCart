{
    "manifest_version": 2,
    "name": "selection-to-clipboard",
    "description": "Example of WebExtensionAPI for writing to the clipboard",
    "version": "1.0",
    "homepage_url": "https://github.com/jenny011/Recipe-Extension",
    "permissions": [
        "activeTab"
    ],
    "icons": {
        "48": "icons/logo_48.png"
    },
    "background": {
        "scripts": ["content-script.js"],
        "persistent": false
    },
    "browser_action": {},
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content-script.js"]
    }]
}
